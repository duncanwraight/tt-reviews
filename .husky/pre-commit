echo "🔍 Running code quality checks..."
npm run check

if [ $? -ne 0 ]; then
  echo "❌ Code quality checks failed. Please fix the issues before committing."
  echo "💡 Run 'npm run check' to see all issues"
  echo "💡 Run 'npm run lint:fix' to auto-fix linting issues"
  echo "💡 Run 'npm run format' to auto-format code"
  exit 1
fi

echo "✅ Code quality checks passed!"